@font-face {
  font-family: "Poppins";
  src: url("/font/Poppins-Bold") format('truetype');
}

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  text-decoration: none;
  list-style-type: none;
  outline: none;
}

::-webkit-scrollbar {
  width: 0.5vw;
  background-color: var(--primaryColor);
}

::-webkit-scrollbar-thumb {
  background-color: var(--themeColor);
  border-radius: calc(0.5vw / 2);
}

::-moz-selection {
  background-color: var(--themeColor);
  color: #FFFFFF;
}

::selection {
  background-color: var(--themeColor);
  color: #FFFFFF;
}

:focus {
  outline: none;
}

body {
	margin: 0 0 var(--navBarHeight);
	// margin: var(--navBarHeight) 0;
}

.main {
  background-color: var(--primaryColor);
}

@media (min-width: 825px) {
  body {
    margin: 0;
  }
}