blogLogo(height) {
  .logo {
    display: flex;
    justify-content: center;
    transition: 0.3s ease-in-out;

    &:hover,
    &:focus-within {
      transform: scale(1.1);
    }

    svg {
      height: height;
    }
  }
}

socialIcons(iconColor, containerPadding) {
  .socialContainer {
    padding: 0 containerPadding;
    height: var(--navBarHeight);
    width: 100%;

    .social {
      width: 100%;
      height: 100%
      display: flex;
      gap: 0.5em;
      justify-content: space-around;
      align-items: center;

      .socialItem {
        height: var(--iconSize);
        width: var(--iconSize);
        border-radius: 50%;
        transition: 0.3s ease-in-out;

        &:hover,
        &:focus-within {
          -webkit-transform: scale(1.5);
          transform: scale(1.5);

          &::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 50%;
            -webkit-transform: scale(1.4);
            transform: scale(1.4);
            z-index: -1;
            -webkit-animation: pulse 1s ease-in-out infinite;
            animation: pulse 1s ease-in-out infinite;

            @-webkit-keyframes pulse {
              0% {
                -webkit-transform: scale(1);
                transform: scale(1);
                opacity: 0.7;
              }

              100% {
                -webkit-transform: scale(1.3);
                transform: scale(1.3);
                opacity: 0;
              }
            }

            @keyframes pulse {
              0% {
                -webkit-transform: scale(1);
                transform: scale(1);
                opacity: 0.7;
              }

              100% {
                -webkit-transform: scale(1.3);
                transform: scale(1.3);
                opacity: 0;
              }
            }
          }

          &:nth-child(1) {
            background-color: #6cc644;

            &::before {
              background-color: #509433;
            }
          }

          &:nth-child(2) {
            background-color: #0077b5;

            &::before {
              background-color: #005b8b;
            }
          }

          &:nth-child(3) {
            background-color: #3b5998;

            &::before {
              background-color: #004266;
            }
          }

          &:nth-child(4) {
            background-color: #1da1f2;

            &::before {
              background-color: #004a72;
            }
          }

          &:nth-child(5) {
            background-color: #ff4208;

            &::before {
              background-color: #be3005;
            }
          }

          &:nth-child(6) {
            background-color: #bd081c;

            &::before {
              background-color: #8f0616;
            }
          }

          &:nth-child(7) {
            background: linear-gradient(225deg, #515bd4, #8134af, #dd2a7b, #fa7e1e, #feda75);

            &::before {
              background: linear-gradient(225deg, #515bd4, #8134af, #dd2a7b, #fa7e1e, #feda75);
            }
          }

          a {
            height: var(--iconSize);
            width: var(--iconSize);

            .socialIcon {
              svg {
                --textColor: #FFFFFF;
              }
            }
          }
        }

        a {
          .socialIcon {
            svg {
              height: var(--iconSize);

              path {
                fill: iconColor !important;
              }
            }
          }
        }
      }
    }
  }
}

themeSwitcher() {
  .themesContainer {
    --gap: 5vw;
    width: 100%;
    margin: 1em 0;
    display: flex;
    gap: var(--gap);
    justify-content: center;
    align-items: center;

    .theme {
      position: relative;

      input {
        --size: calc((var(--iconSize) + var(--gap)) / 6);
        position: absolute;
        top: 0;
        right: 0;
        -webkit-appearance: none;
        width: calc(var(--size) * 2);
        max-width: var(--iconSize);
        height: var(--size);
        max-height: calc(var(--iconSize) / 2);
        border-radius: calc(var(--size) / 2);
        background-color: var(--primaryColor);
        transform: translateY(50%);
        transition: 0.3s ease-in-out;

        &:before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: var(--size);
          max-width: calc(var(--iconSize) / 2);
          height: var(--size);
          max-height: calc(var(--iconSize) / 2);
          border-radius: 50%;
          background-color: var(--themeColor);
          transform: scale(1.1);
        }

        &:checked {
          background-color: #ca9488;

          &::before {
            left: unset;
            right: 0;
          }
        }
      }

      svg {
        // height: (screenWidth - paddingOnBothSides - twoGapsBetweenThemes) / numberOfThemes;
        height: calc((100vw - (var(--sitePadding) * 3) - (var(--gap) * 2)) / 3);
        max-height: 10em;
      }
    }
  }
}

defaultContainer(width) {
  padding: 1em;
  width: width;
  background-color: var(--secondaryColor);
  border-radius: 10px;
  box-shadow: 0 5px 8px rgba(0, 0, 0, 0.15);
}

secondaryButton() {
  display: inline-block;
  padding: 0.5em 1em;
  color: var(--themeColor);
  font-size: 1em;
  font-family: "Poppins", sans-serif;
  border-radius: 20em;
  border: 1px solid var(--themeColor);
  transition: 0.3s ease-in-out;

  &:hover,
  &:focus-within {
    transform: scale(1.1);
    box-shadow: 0 0 20px var(--themeColor);
  }
}

primaryButton() {
  secondaryButton();
  color: var(--secondaryColor);
  background-color: var(--themeColor);
}

hoverLinks() {
  text-decoration: none !important;

  &:hover,
  &:focus-within {
    color: var(--themeColor) !important;
    text-decoration: underline !important;
  }
}

actionBar() {
  padding: calc(var(--padding) / 4) var(--padding);
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;

  .actionIcons {
    display: flex;
    gap: 0.5em;
    justify-content: flex-start;
    align-items: center;
  }

  .actionItem {
    display: flex;
    justify-content: flex-start;
    align-items: center;

    .icon {
      display: flex;

      svg {
        height: var(--iconSize);
      }
    }

    .total {
      font-size: 0.8em;
      color: var(--neutralColor);
    }
  }
}